---
const { head, content } = Astro.props;
---

<div
    class="relative flex flex-col mt-6 text-gray-700 bg-[#E3533C] shadow-md bg-clip-border rounded-xl"
>
    <div class="p-6">
        <h5
            class="block mb-2 font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-white"
        >
            {head}
        </h5>
        <p
            class="block font-sans text-base antialiased font-light leading-relaxed text-white"
        >
            {content}
        </p>
    </div>
    <div class="p-6 pt-0">
        <button
            class="align-middle select-none font-sans font-bold text-center uppercase text-xs py-3 px-6 rounded-lg bg-gray-900 text-white shadow-md shadow-gray-900/10 hover:shadow-lg hover:shadow-gray-900/20"
            type="button"
        >
            Read More
        </button>
    </div>
</div>
