---
const { text, id } = Astro.props;
---

<div class="flex flex-col items-center gap-1">
    <div
        class="border flex flex-col items-center justify-center w-[70px] h-[70px] md:w-[80px] md:h-[80px] rounded-[25px] gap-[5px] text-black bg-white"
    >
        <p id={id} class="font-bold text-[28px] text-[#E04127]"></p>
    </div>
    <p class="text-[12px] text-white">{text}</p>
</div>
